@page
@model MarketplaceWebUI.Pages.MarketplaceModel
@using MarketplaceObjects
@{
    ViewData["Title"] = "Marketplace";
}

<div class="text-center">
    <h1 class="display-4">Marketplace</h1>
    <p>Ipsum, etc.</p>

    <p>@{
            @Model.Title
    }</p>

    <table>
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
        @{
            @foreach (var cat in @Model.Categories)
            {
                <tr>
                    <td>
                        @cat.Name
                    </td>
                    <td>
                        @cat.Description
                    </td>
                </tr>
            }
        }
    </table>
</div>
